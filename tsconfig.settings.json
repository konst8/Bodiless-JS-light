{
  "compilerOptions": {
    "outDir": "lib",
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "lib": ["es7", "dom"],
    "types": ["jest", "node"],
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "baseUrl": "packages",
    "paths": {
      "--vital--": ["__vital__/src/"],
      "--vital--/*": ["__vital__/src/*"],
      "@bodiless/accordion": ["bodiless-accordion/src"],
      "@bodiless/accordion/*": ["bodiless-accordion/src/*"],
      "@bodiless/card": ["bodiless-card/src"],
      "@bodiless/card/*": ["bodiless-card/src/*"],
      "@bodiless/carousel": ["bodiless-carousel/src"],
      "@bodiless/components": ["bodiless-components/src"],
      "@bodiless/components/*": ["bodiless-components/src/*"],
      "@bodiless/components-ui": ["bodiless-components-ui/src"],
      "@bodiless/components-ui/*": ["bodiless-components-ui/src/*"],
      "@bodiless/core": ["bodiless-core/src"],
      "@bodiless/core/*": ["bodiless-core/src/*"],
      "@bodiless/core-ui": ["bodiless-core-ui/src"],
      "@bodiless/core-ui/*": ["bodiless-core-ui/src/*"],
      "@bodiless/curator/": ["bodiless-curator/src/"],
      "@bodiless/curator/*": ["bodiless-curator/src/*"], 
      "@bodiless/filtering": ["bodiless-filtering/src"],
      "@bodiless/filtering/*": ["bodiless-filtering/src/*"],
      "@bodiless/hydration": ["bodiless-hydration/src"],
      "@bodiless/hydration/*": ["bodiless-hydration/src/*"],
      "@bodiless/layouts": ["bodiless-layouts/src"],
      "@bodiless/layouts/*": ["bodiless-layouts/src/*"],
      "@bodiless/layouts-ui": ["bodiless-layouts-ui/src"],
      "@bodiless/layouts-ui/*": ["bodiless-layouts-ui/src/*"],
      "@bodiless/navigation": ["bodiless-navigation/src"],
      "@bodiless/navigation/*": ["bodiless-navigation/src/*"],
      "@bodiless/oidc": ["bodiless-oidc/src"],
      "@bodiless/oidc/*": ["bodiless-oidc/src/*"],
      "@bodiless/organisms": ["bodiless-organisms/src"],
      "@bodiless/organisms/*": ["bodiless-organisms/src/*"],
      "@bodiless/page": ["bodiless-page/src"],
      "@bodiless/page/*": ["bodiless-page/src/*"],
      "@bodiless/richtext": ["bodiless-richtext/src"],
      "@bodiless/richtext/*": ["bodiless-richtext/src/*"],
      "@bodiless/richtext-ui": ["bodiless-richtext-ui/src"],
      "@bodiless/richtext-ui/*": ["bodiless-richtext-ui/src/*"],
      "@bodiless/schema-org": ["bodiless-schema-org/src"],
      "@bodiless/schema-org/*": ["bodiless-schema-org/src/*"],
      "@bodiless/table": ["bodiless-table/src"],
      "@bodiless/table/*": ["bodiless-table/src/*"],
      "@bodiless/tokens": ["bodiless-tokens/src"],
      "@bodiless/tokens/*": ["bodiless-tokens/src/*"],
      "@bodiless/ui": ["bodiless-ui/src"],
      "@bodiless/ui/*": ["bodiless-ui/src/*"],
      "@bodiless/youtube": ["bodiless-youtube/src"],
      "@bodiless/youtube/*": ["bodiless-youtube/src/*"],
      "@bodiless/webpack": ["bodiless-webpack/src"],
      "@bodiless/webpack/*": ["bodiless-webpack/src/*"],
      "@bodiless/fclasses": ["fclasses/src"],
      "@bodiless/fclasses/*": ["fclasses/src/*"],
      "@bodiless/gatsby-theme-bodiless": ["gatsby-theme-bodiless/src"],
      "@bodiless/gatsby-theme-bodiless/*": ["gatsby-theme-bodiless/src/*"]
    }
  }
}
